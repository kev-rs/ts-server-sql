{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "target": "ES2020",
    "sourceMap": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "$db": ["src/db/index.ts"],
      "$types": ["src/types/index.ts"],
      "$controllers": ["src/controllers/index.ts"],
    }
  },
  "include": ["src/**/*"],
}